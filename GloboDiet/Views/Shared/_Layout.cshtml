@model GloboDiet.ViewModels.ViewModelBase

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GloboDiet</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js" integrity="sha512-UdIMMlVx0HEynClOIFSyOrPggomfhBKJE28LKl8yR3ghkgugPnG6iLfRfHwushZl1MOPSY6TsuBDGPK2X4zYKg==" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" integrity="sha512-EanukVTZc4W9tUCLnDl069Izidg49PcNRKO1upLzKt9ajq66i+bXOtlzXcIbRhb6vVEGF6BCc8wQi5T1ztCpTQ==" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip()
            $(".dropdown-toggle").dropdown();
        })
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-nowrap" asp-area="" asp-controller="Home" asp-action="Index" data-toggle="tooltip" title="lol">
                    GloboDiet
                    <img src="/images/icon_upload.png" width="30" height="24"></img>
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Test">Test</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                Interviews <span class="badge badge-pill badge-warning">@Model.NavigationBar.PillCountInterviews</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Home/CreateRespondent">Create Respondent</a>
                                <a class="dropdown-item" href="/Home/ListRespondents">List Respondents</a>
                                <hr class="dropdown-divider">
                                <a class="dropdown-item" href="/Home/CreateInterview">Create Interview</a>
                                <a class="dropdown-item" href="/Home/ListInterviews">List Interviews <span class="badge badge-pill badge-warning">@Model.NavigationBar.PillCountInterviews</span></a>
                                <hr class="dropdown-divider">
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="true">
                                Interviewers <span class="badge badge-pill badge-primary">@Model.NavigationBar.PillCountInterviewers</span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="/Home/CreateInterviewer">Create Interviewer</a>
                                <a class="dropdown-item" href="/Home/ListInterviewers">List Interviewers</a>
                                <hr class="dropdown-divider">
                                <a class="dropdown-item" href="/Home/CreateLocation">Create Location</a>
                                <a class="dropdown-item" href="/Home/ListLocations">List Locations</a>
                            </div>
                        </li>
                        <li class="nav-item"><a class="nav-link text-muted" href="#">Respondent</a></li>
                        <li class="nav-item"><a class="nav-link text-secondary">Recipe</a></li>
                        <li class="nav-item"><a class="nav-link text" href="#">Interview</a></li>
                        <li class="nav-item"><a class="nav-link text-info" href="~/admin/index">Admin</a></li>
                    </ul>
                </div>
                <span class="navbar-item float-right text-muted">
                    <span class="badge badge-pill badge-info">sql</span>
                    <small>@Model.NavigationBar.CurrentSqlConnectionType</small>
                </span>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <ul class="container list-group list-group-horizontal d-flex align-items-center" style="height: 2rem">
        <li class="list-group-item list-group-item-primray">Respondent</li>
        <li class="list-group-item list-group-item-success">Respondent</li>
        <li class="list-group-item list-group-item-secondary">Respondent</li>
    </ul>

    <footer class="border-top footer">
        <ul class="container list-group list-group-horizontal">
            <li class="list-group-item list-group-item-primray">Respondent</li>
            <li class="list-group-item list-group-item-success">Respondent</li>
            <li class="list-group-item list-group-item-secondary">Respondent</li>
        </ul>

    </footer>
</body>
</html>
