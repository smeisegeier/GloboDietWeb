@model GloboDiet.ViewModels.InterviewCreateEdit

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Meals.First().StartingHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals.First().MealType.Label)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meals.First().MealPlace.Label)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if (Model?.Meals is not null) {
        @foreach (var item in Model.Meals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartingHour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealType.Label)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MealPlace.Label)
            </td>
            <td>
                <a asp-action="Meal2Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Meal2Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="#" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    }
    </tbody>
</table>
