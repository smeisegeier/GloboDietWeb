@model GloboDiet.ViewModels.MealCreateEdit
@using GloboDiet
@using GloboDiet.Models



<h4>Create Meal</h4>
<hr />
<form asp-action="Meal2Edit">

    <div asp-validation-summary="ModelOnly" class="text-danger">    </div>

    <div class="form-group">
        <input asp-for="IsCachedOnly" hidden />
        <input asp-for="InterviewId" hidden />
        <input asp-for="Id" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="StartingHour" class="control-label"></label>
        <input asp-for="StartingHour" class="form-control" autofocus />
        <span asp-validation-for="StartingHour" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MealTypeId" class="control-label"></label>
        <select asp-for="MealTypeId" class="form-control" asp-items=@MealType.Dropdown>
            <option selected disabled value="">Please select</option>
        </select>
        <span asp-validation-for="MealTypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MealPlaceId" class="control-label"></label>
        <select asp-for="MealPlaceId" class="form-control" asp-items=@MealPlace.Dropdown>
            <option selected disabled value="">Please select</option>
        </select>
        <span asp-validation-for="MealPlaceId" class="text-danger"></span>
    </div>
    <h1>List of MealElements</h1>
    <div class="form-inline">
        <input type="submit" value="+" name="submit" class="btn btn-info" formaction="/Home/MealElement3Create" formnovalidate />
    </div>
    <partial name="_MealElementsList.cshtml" />

    <partial name="/Views/Shared/_OkCancelButtons.cshtml" />


</form>



