        <label asp-for="Respondent.Age" class="control-label"></label>
        <input asp-for="Respondent.Age" class="form-control" readonly="readonly"/>
        <span asp-validation-for="Respondent.Age" class="text-danger"></span>
    </div>*@
<div class="form-group">
    <label asp-for="Respondent.Height" class="control-label"></label>
    <input asp-for="Respondent.Height" class="form-control" />
    <span asp-validation-for="Respondent.Height" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Respondent.Weight" class="control-label"></label>
    <input asp-for="Respondent.Weight" class="form-control" />
    <span asp-validation-for="Respondent.Weight" class="text-danger"></span>
</div>

@Html.ValidationMessage("CustomError", null, new { @class="text-danger"})
