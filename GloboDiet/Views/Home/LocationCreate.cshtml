@model GloboDiet.ViewModels.LocationCreateEdit

<h1>CreateLocation</h1>

<h4>Location</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateLocation">
            <input type="hidden" asp-for="ReturningAction"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Location.City" class="control-label"></label>
                <input asp-for="Location.City" class="form-control" />
                <span asp-validation-for="Location.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location.Country" class="control-label"></label>
                <input asp-for="Location.Country" class="form-control" />
                <span asp-validation-for="Location.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @*<a href='javascript:history.go(-1)' class="btn btn-primary" >back</a>*@
            </div>
        </form>
    </div>
</div>

